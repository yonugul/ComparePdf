			<TargetPath>runtimes/linux-x64/native/libMuPDFWrapper.so</TargetPath>
		</ContentWithTargetPath>
		<ContentWithTargetPath Include="..\mupdf\linux-arm64\libMuPDFWrapper.so">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
