<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Obro.Pdf\Obro.Pdf.csproj" />
  </ItemGroup>
	<ItemGroup>
		<ContentWithTargetPath Include="..\mupdf\linux-x64\libMuPDFWrapper.so">
