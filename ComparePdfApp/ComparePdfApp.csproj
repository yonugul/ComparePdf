		<ContentWithTargetPath Include="..\mupdf\win-x86\MuPDFWrapper.dll">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
			<TargetPath>runtimes/win-x86/native/MuPDFWrapper.dll</TargetPath>
		</ContentWithTargetPath>
		<ContentWithTargetPath Include="..\mupdf\win-arm64\\MuPDFWrapper.dll">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
			<TargetPath>runtimes/win-arm64/native/MuPDFWrapper.dll</TargetPath>
		</ContentWithTargetPath>
	</ItemGroup>
</Project>
